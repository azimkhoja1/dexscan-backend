# Copy this to .env (do not commit .env to GitHub). Use Render environment variables instead.

# Bitget API credentials
BITGET_API_KEY=
BITGET_API_SECRET=
BITGET_API_PASSPHRASE=

# Demo mode default (1 = demo/paper; 0 = live)
BITGET_DEMO=1

# Base URL for Bitget API (usually left default)
BITGET_BASE=https://api.bitget.com

# Behavior
PERCENT_PER_TRADE=2
TP_PERCENT=10
FEE_PERCENT=0.2
MAX_CONCURRENT=10

# Render will set PORT automatically. Default port used in server.js fallback is 10000
PORT=10000
